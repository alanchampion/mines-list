extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
        h3= pageHeader.strapline
  .row
    .col-xs-12.col-sm-8
      .error= message
      .row.list-group
        each item in items
          .col-xs-12.list-group-item
            h4
              a(href="/item/" + item._id)= item.name
            p $#{item.price}&nbsp;-&nbsp;#{item.seller}
    .col-xs-12.col-sm-4
      p.lead= sidebar