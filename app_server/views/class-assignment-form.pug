extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")
        -if(error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="#{formInfo.name}") #{formInfo.name}
          .col-xs-12.col-sm-10
            input.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="#{formInfo.due}") #{formInfo.due}
          .col-xs-12.col-sm-10
            input.form-control(name="due" type="date")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="#{formInfo.points}") #{formInfo.points}
          .col-xs-12.col-sm-10
            input.form-control(name="points" type="number" min="0" max="100")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="#{formInfo.status}") #{formInfo.status}
          .col-xs-12.col-sm-10
            select.form-control(name="status")
              each status in statuses
                option= status
        button.btn.btn-default.pull-right Add Assignment